{{#declarations}}
<div class="alert alert-warning it-has-submissions" hidden>
{{#str}} editdisabled, assignsubmission_declaration{{/str}}
</div>
<div id="fgroup_id_assignsubmission_declaration_group" class="form-group row  fitem" data-groupname="assignsubmission_declaration_group">
    <div class="col-md-3 col-form-label d-flex pb-0 pr-md-0" >
        <p id="fgroup_id_assignsubmission_declaration_group_label_{{ordered}}" class="mb-0 word-break" aria-hidden="true" data-current-title = "{{declaration_title}}">
            {{declaration_title}}
        </p>

        <div class="form-label-addon d-flex align-items-center align-self-start"></div>
    </div>
    <div class="col-md-9 form-inline align-items-start felement" data-fieldtype="group">
        <fieldset class="w-100 m-0 p-0 border-0">
                <legend class="sr-only">{{declaration_title}}</legend>
            <div class="d-flex flex-wrap align-items-center">

                <label class="accesshide" for="id_assignsubmission_declaration_1">&nbsp;</label>
                <textarea wrap="virtual" rows="5" cols="55" value="declaration_text"
                placeholder="" name="assignsubmission_declaration_{{ordered}}" id="id_assignsubmission_declaration_{{ordered}}">{{declaration_text}}</textarea>

                <label data-fieldtype="checkbox" class="form-check  fitem" data-select-checbox = "1">
                    <input type="checkbox" name="assignsubmission_declaration_{{ordered}}_check"  class="form-check-input " id="id_assignsubmission_declaration_{{ordered}}_check" value="1"{{#selected}} checked {{/selected}}>
                    Select
                </label>
                 <label data-fieldtype="checkbox" class="form-check  fitem" data-delete-icon = "1" {{#firstdeclaration}} hidden {{/firstdeclaration}}>
                    <span id = "delete_declaration_container_{{ordered}}"><i class="fa fa-times delete_declaration_icon" aria-hidden="true" id = "delete_declaration_{{ordered}}"></i>Delete  {{declaration_title}} declaration</span>
                </label>

<span class="form-control-feedback invalid-feedback" id="id_error_assignsubmission_declaration_1_check">

</span>
            </div>
        </fieldset>
        <div class="form-control-feedback invalid-feedback" id="fgroup_id_error_assignsubmission_declaration_group">

        </div>
    </div>
</div>
{{/declarations}}